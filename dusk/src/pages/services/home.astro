---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
const allPosts = await getCollection("services");
import ServicesEntries from "@/components/services/ServicesEntries.astro";
---

<BaseLayout>
  <section>
    <div class="p-8 max-w-7xl mx-auto border-x border-b border-gray lg:py-32">
      <div class="max-w-2xl">
        <h1 class="text-neutral-400 font-light">
          Crafting future-ready designs and development solutions
        </h1>
        <h3 class="text-white mt-6 text-2xl font-light">
          Welcome to our services page, where excellence meets innovation in the
          heart of the city. Our suite of services encompasses the entire spectrum
          of digital creation, from conceptual 3D designs that breathe life into
          your visions to intricate design systems that ensure consistency and
          efficiency across your projects.
        </h3>
      </div>
    </div>
  </section>
<section>
  <div class="max-w-7xl mx-auto border-x border-gray border-b">
    <div class="text-white grid grid-cols-1 divide-y divide-gray">
      {
        allPosts.map((post) => (
          <ServicesEntries
            url={"/services/" + post.slug}
            service={post.data.service}
          />
        ))
      }
    </div>
  </div>
</section>
</BaseLayout>
